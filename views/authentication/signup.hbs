<div class="container">
    <h2>Регистрация</h2>
    <div class="card m-3 p-4">
        {{#if message}}
            <p style="color: red;">{{this.message}}</p>
        {{/if}}
        <form action="/signup" method="POST">
            <div class="form-group">
                <label>Имя:</label>
                <input class="border form-control" type="text" name="name" required/>
            </div>
            <div class="form-group">
                <label>Email:</label>
                <input class="border form-control" type="text" name="email" required/>
            </div>
            <div class="form-group">
                <label>Пароль:</label>
                <input class="border form-control" type="password" name="password" required/>
            </div>
                <div class="form-group">
                    <label>Пол:</label>
                    <select class="custom-select">
                        <!--                    <option selected>Open this select menu</option>-->
                        <option value="1">Женский</option>
                        <option value="2">Мужской</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Дата рождения:</label>
                    <input class="border form-control" type="text" name="email" required/>
                </div>
            <div>
                <input class="btn btn-primary" type="submit" value="Зарегистрироваться"/>
            </div>
        </form>
    </div>
</div>
