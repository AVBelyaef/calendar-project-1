<div class="container">
    <h2>Регистрация</h2>
    <div class="card m-3 p-4">
        {{#if message}}
            <p style="color: red;">{{this.message}}</p>
        {{/if}}
        <form action="/signup" method="POST">
            <div class="form-group">
                <label>Имя:</label>
                <input class="border form-control" type="text" name="name" required/>
            </div>
            <div class="form-group">
                <label>Email:</label>
                <input class="border form-control" type="text" name="email" required/>
            </div>
            <div class="form-group">
                <label>Пароль:</label>
                <input class="border form-control" type="password" name="password" required/>
            </div>
            <div class="form-group">
                <label>Пол:</label>
<!--                <select class="custom-select">-->
<!--                    &lt;!&ndash;                    <option selected>Open this select menu</option>&ndash;&gt;-->
<!--                    <option name="password" value="1">Женский</option>-->
<!--                    <option value="2">Мужской</option>-->
<!--                </select>-->
                <div class="custom-control custom-radio">
                    <input type="radio" id="customRadio1" name="gender" value="F" class="custom-control-input">
                    <label class="custom-control-label" for="customRadio1">Женский</label>
                </div>
                <div class="custom-control custom-radio">
                    <input type="radio" id="customRadio2" name="gender" value="M" class="custom-control-input">
                    <label class="custom-control-label" for="customRadio2" >Мужской</label>
                </div>
            </div>
            <div class="form-group">
                <label>Дата рождения:</label>
                <input class="border form-control" type="date" name="dob" required/>
            </div>



            <div>
                <input style= "background-color: #9A74A1; border-color: #9A74A1"class="btn btn-primary" type="submit" value="Зарегистрироваться"/>
            </div>
        </form>
    </div>
</div>
